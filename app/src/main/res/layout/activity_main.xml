        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn2"
        android:height="120dp"
        android:layout_weight="1"
        android:textSize="55sp"
        android:textStyle="bold"
        android:layout_marginRight="5dp"
        />
